<resources>

    <!-- Tema base de la aplicacion -->
    <style name="DayNight" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!--Fin estilo de texto primario-->

    <!--Estilo de botones primarios-->
    <style name="BtnPrimary" parent="Widget.MaterialComponents.BottomAppBar.Colored">
        <item name="android:textSize">16dp</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:textColor">@color/lightPrimaryColor</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@android:drawable/dialog_holo_light_frame</item>
    </style>
    <!--Fin estilo de botones primarios-->

    <!--Estilo de Labels primarios-->
    <style name="lblPrimary">
        <item name="android:textSize">24dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:color">@color/primaryText</item>
        <item name="android:background">@android:drawable/dialog_holo_light_frame</item>
    </style>
    <!--Fin estilo de labels primario-->

    <!--Estilo de tablas-->
    <style name="tabla">
        <item name="android:textSize">24dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">285dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">150dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center_horizontal|right</item>

        <item name="android:background">@android:drawable/dialog_holo_light_frame</item>
    </style>
    <!--Fin estilo de tablas -->

    <!--Estilo de btnEditar -->
    <style name="btnEditar">
        <item name="android:textSize">8dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:opacity">translucent</item>
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">right</item>
        <item name="android:background">@android:drawable/dialog_holo_light_frame</item>
    </style>
    <!--Fin estilo de btnEditar -->

    <!--Estilo de Eliminar -->
    <style name="btnEliminar">
        <item name="android:textSize">8dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:opacity">translucent</item>
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">right</item>
        <item name="android:backgroundTint">@color/eliminarEstudiante</item>
        <item name="android:background">@android:drawable/dialog_holo_light_frame</item>
    </style>
    <!--Fin estilo de Eliminar -->

    <!--Estilo de TextView -->
    <style name="textView">
        <item name="android:textSize">24dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/fresca</item>
    </style>
    <!--Fin Estilo de TextView -->








</resources>
