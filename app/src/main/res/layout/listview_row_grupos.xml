<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_view_1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="7dp"
    android:background="@android:drawable/dialog_holo_light_frame">

    <ImageView
        android:id="@+id/listview_image"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="1dp"
        android:layout_marginLeft="2dp"
        android:layout_weight="1"
        android:background="@drawable/ic_group_blue_24dp"
        android:contentDescription="@string/app_name"
        android:padding="2dp" />

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="7dp">

        <TextView
            android:id="@+id/titulo"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_margin="1dp"
            android:maxLength="30"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/descripcion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:maxLength="200"
                    android:paddingTop="1dp"
                    android:textSize="14sp" />

            </LinearLayout>

            <Button
                android:id="@+id/btnEditarGrupo"
                android:layout_width="85dp"
                android:layout_height="35dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/ic_edit_yellow_24dp"
                android:focusable="false" />

            <Button
                android:id="@+id/btnEliminarGrupo"
                android:layout_width="85dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/ic_delete_red_24dp"
                android:focusable="false" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

