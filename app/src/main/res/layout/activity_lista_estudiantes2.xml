<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="367dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:srcCompat="@drawable/ic_group_black_24dp" />

        <TextView
            android:id="@+id/labelSeccion2"
            style="@style/lblPrimary"
            android:layout_width="287dp"
            android:layout_height="65dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="@string/seccionListaEstudiantes"
            android:textAllCaps="false"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="16dp" />
    </LinearLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_above="@+id/listview"
        android:layout_alignParentStart="true"
        android:background="#128675">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="91dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_column="0"
                android:padding="3dip"
                android:text="Pago"
                android:textAlignment="center"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="134dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_column="0"
                android:layout_marginEnd="70dp"
                android:padding="3dip"
                android:text="Nombre"
                android:textAlignment="center"
                android:textColor="@android:color/white" />
        </RelativeLayout>

    </TableRow>

    <Button
        android:id="@+id/btnAddEstudiante"
        style="@style/BtnPrimary"
        android:layout_width="372dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/aÃ±adirEstudiante"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="495dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="80dp"
        android:layout_marginRight="3dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="440dp">

    </LinearLayout>

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="277dp"
        android:layout_centerInParent="true"
        android:layout_marginRight="10dp"
        android:dividerHeight="1dp"
        android:padding="2dp"
        android:paddingEnd="5dp" />
</RelativeLayout>
